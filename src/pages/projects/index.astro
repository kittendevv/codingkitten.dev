---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '../../components/ProjectCard.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const all = await getCollection('projects');
const mapped = all.map((e) => ({ id: e.id, ...(e.data || {}) }));
const highlights = mapped.filter((p) => !!p.featured).sort((a, b) => (a.highlightOrder || 9999) - (b.highlightOrder || 9999));
const others = mapped.filter((p) => !p.featured);
---

<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} - Projects`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
  <main class="projects-page container">
      <h1>Projects</h1>
      <p>These are some of my notable projects.</p>
      <!-- Render project cards directly on the Projects page -->
      {highlights.length > 0 && (
        <div class="projects-page__highlights">
          {highlights.map((p) => (
            <ProjectCard project={p} highlight={true} />
          ))}
        </div>
      )}
      <div class="projects-page__grid">
        {others.map((p) => (
          <ProjectCard project={p} />
        ))}
      </div>
      <div class="projects-page__cta">
        <a
          href="https://github.com/kittendevv"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn--ghost"
          data-umami-event="projects_visit_github"
        >
          Explore my GitHub
        </a>
      </div>
      <style>
        .projects-page__highlights { display: grid; grid-template-columns: 1fr; gap: .5rem; margin: .5rem 0 .75rem; }
        @media (min-width: 640px) { .projects-page__highlights { grid-template-columns: repeat(2, minmax(0, 1fr)); } }

        .projects-page__grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: .5rem; }

        .projects-page__cta {
          display: flex;
          justify-content: center;
          margin-top: 1rem;
        }
        @media (max-width: 640px) {
          .projects-page__cta .btn { width: 100%; max-width: 460px; text-align: center; justify-content: center; }
        }
      </style>
    </main>
    <Footer />
  </body>
</html>
