---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '../../components/ProjectCard.astro';

const all = await getCollection('projects');
const mapped = all.map((e) => ({ id: e.id, ...(e.data || {}) }));
const highlights = mapped.filter((p) => !!p.featured).sort((a, b) => (a.highlightOrder || 9999) - (b.highlightOrder || 9999));
const others = mapped.filter((p) => !p.featured);
---

<html lang="en">
  <head>
    <BaseHead title="Projects" description="All projects" />
  </head>
  <body>
    <Header />
    <main style="max-width: 900px; margin: 1.5rem auto; padding: 0 1rem;">
      <h1>Projects</h1>
      <p>These are some of my notable projects.</p>
      <!-- Render project cards directly on the Projects page -->
      {highlights.length > 0 && (
        <div>
          {highlights.map((p) => (
            <ProjectCard project={p} highlight={true} />
          ))}
        </div>
      )}
      <div style="margin-top: .5rem;">
        {others.map((p) => (
          <ProjectCard project={p} />
        ))}
      </div>
      <div class="projects-page__cta">
        <a
          href="https://github.com/kittendevv"
          target="_blank"
          rel="noopener noreferrer"
          class="btn"
          data-umami-event="projects_visit_github"
        >
          Explore my GitHub
        </a>
      </div>
      <style>
        .projects-page__cta {
          display: flex;
          justify-content: center;
          margin-top: 1rem;
        }
      </style>
    </main>
    <Footer />
  </body>
</html>
