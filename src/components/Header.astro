---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
	<nav class="container">
				<div class="left-nav">
					<div class="site-icon" aria-hidden="true">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 8 8" focusable="false" aria-hidden="true"><path fill="currentColor" d="M7 3h1V0H7v1H6v1h1ZM1 8h1V7H1ZM0 7h1V3H0Zm2 2h5V8H2Zm0-4h1V4H2Zm1 2h3V6H5V5H4v1H3Zm4 1h1V7H7ZM1 3h1V2h1V1H2V0H1Zm5 2h1V4H6ZM3 3h3V2H3Zm5 4h1V3H8Zm0 0"/></svg>
					</div>
					<div class="internal-links">
					<HeaderLink href="/">Home</HeaderLink>
					<HeaderLink href="/blog">Blog</HeaderLink>
					<HeaderLink href="/projects">Projects</HeaderLink>
					<HeaderLink href="/about">About</HeaderLink>
				</div>
				<h2><a href="/" class="sr-only">{SITE_TITLE}</a></h2>
			</div>
		<div class="social-links">
			<a href="mailto:codingkitten@disroot.org" target="_blank">
				<span class="sr-only">Send me an email</span>
				<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail-icon lucide-mail"><path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"/><rect x="2" y="4" width="20" height="16" rx="2"/></svg>
			</a>
			<a href="https://ko-fi.com/codingkitten" target="_blank">
				<span class="sr-only">Support me</span>
				<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-heart-icon lucide-heart"><path d="M2 9.5a5.5 5.5 0 0 1 9.591-3.676.56.56 0 0 0 .818 0A5.49 5.49 0 0 1 22 9.5c0 2.29-1.5 4-3 5.5l-5.492 5.313a2 2 0 0 1-3 .019L5 15c-1.5-1.5-3-3.2-3-5.5"/></svg>
			</a>
			<a href="https://github.com/kittendevv" target="_blank">
				<span class="sr-only">Visit my Github profile</span>
				<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github-icon lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
			</a>
		</div>
		   <!-- ThemeToggle moved to Footer -->
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		/* Stick to top of viewport */
		position: sticky;
		top: 0;
		z-index: 50;
		/* Use theme surface color so header follows Latte / Mocha */
		background-color: rgb(var(--gray-light));
		backdrop-filter: blur(6px);
		-webkit-backdrop-filter: blur(6px);
		box-shadow: 0 2px 8px rgba(var(--black), 0.05);
	}
	h2 {
		margin: 0;
		font-size: 0.95em;
		padding: 0.35rem 0;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	.left-nav .internal-links { gap: 0.5rem; }
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.left-nav {
	  display: flex;
	  align-items: center;
	  gap: 1rem;
	}
	.site-icon { display: inline-flex; align-items:center; justify-content:center; color: var(--accent); }
	.site-icon svg { width: 24px; height: 24px; display:block; }
	.left-nav .internal-links { gap: 0.5rem; display:flex; align-items:center; }
	nav a {
		padding: 0.6em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.social-links a svg { width: 24px; height: 24px; stroke: currentColor; }
	.social-links a:hover svg { stroke: var(--accent); color: var(--accent); }
	.social-links a:focus svg { stroke: var(--accent); color: var(--accent); }
	.theme-wrap { display: flex; align-items: center; gap: .5rem; }
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		nav { padding: 0 .25rem; }
	}
</style>
