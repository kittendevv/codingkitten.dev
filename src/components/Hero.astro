---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<section class="hero">
  <div class="hero__inner">
    <p class="hero__eyebrow">{SITE_TITLE}</p>
    <h1 class="hero__title">
      Making the web a little more pawsome.
    </h1>
    <p class="hero__subtitle">
      {SITE_DESCRIPTION}
    </p>
    <div class="hero__ctas">
      <a class="btn" href="/blog">Read my blog</a>
      <a class="btn btn--ghost" href="/about">Explore my projects</a>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 9rem 1rem 4.5rem;
    background: linear-gradient(180deg, rgba(var(--gray-light), 0.35), transparent);
  }
  .hero__inner {
    margin: 0 auto;
    max-width: 860px;
    padding: 0 1rem;
    text-align: center;
  }
  .hero__eyebrow {
    margin: 0 0 .5rem 0;
    font-weight: 700;
    color: var(--accent);
    letter-spacing: .08em;
    text-transform: uppercase;
    font-size: .9rem;
  }
  .hero__title {
    font-size: clamp(1.9rem, 7.5vw, 3.6rem);
    line-height: 1.1;
    margin: 0 0 0.6rem 0;
    color: rgb(var(--black));
  }
  .hero__subtitle {
    margin: 0 auto 1.5rem;
    max-width: 70ch;
    color: rgb(var(--gray-dark));
    font-size: clamp(1.05rem, 2.1vw, 1.25rem);
  }
  .hero__ctas {
    display: inline-flex;
    gap: 1rem;
    margin-top: 1.25rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Subtle load-in animation */
  .hero__inner { animation: fadeUp .6s ease-out both; }

  @media (max-width: 720px) {
    .hero { padding: 6.5rem 1rem 3rem; }
    .hero__ctas { gap: .75rem; }
  }

  @media (max-width: 480px) {
    .hero__ctas { width: 100%; flex-direction: column; align-items: stretch; }
    .hero__ctas .btn { width: 100%; justify-content: center; }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero__inner { animation: none; }
    .btn, .btn:hover { transform: none; box-shadow: none; }
  }
</style>
