---

import ThemeToggle from './ThemeToggle.astro';
const today = new Date();
---

<footer>
		<div class="footer-content container">
			<div class="footer-social-theme">
				<div class="social-links">
					<a href="mailto:codingkitten@disroot.org" target="_blank">
						<span class="sr-only">Send me an email</span>
						<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail-icon lucide-mail"><path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"/><rect x="2" y="4" width="20" height="16" rx="2"/></svg>
					</a>
					<a href="https://ko-fi.com/codingkitten" target="_blank">
						<span class="sr-only">Support me</span>
						<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-heart-icon lucide-heart"><path d="M2 9.5a5.5 5.5 0 0 1 9.591-3.676.56.56 0 0 0 .818 0A5.49 5.49 0 0 1 22 9.5c0 2.29-1.5 4-3 5.5l-5.492 5.313a2 2 0 0 1-3 .019L5 15c-1.5-1.5-3-3.2-3-5.5"/></svg>
					</a>
					<a href="https://github.com/kittendevv" target="_blank">
						<span class="sr-only">Visit my Github profile</span>
						<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github-icon lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
					</a>
				</div>
			</div>
			<div class="theme-wrap centered">
				<ThemeToggle />
			</div>
			</div>
			<div class="footer-copyright">
				&copy; {today.getFullYear()} CodingKitten. All rights reserved.
			</div>
		</div>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray-dark));
		text-align: center;
	}
		.footer-content {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 0.6em;
			}
		.footer-links {
			display: flex;
			gap: 1.5em;
			margin-bottom: 0.5em;
		}
		.footer-links a {
			color: rgb(var(--black));
			text-decoration: none;
			font-weight: 500;
			border-bottom: 2px solid transparent;
			padding: 0.25em 0.5em;
		}
		.footer-links a:hover {
			border-bottom-color: var(--accent);
		}
			.footer-social-theme {
				display: flex;
				align-items: center;
				gap: 1em;
			}
			.social-links {
				display: flex;
				gap: 0.75em;
				align-items: center;
			}
		.social-links a {
			text-decoration: none;
			color: var(--cp-mauve);
		}
		.social-links a:hover {
			color: var(--accent);
		}
			.theme-wrap {
				display: flex;
				align-items: center;
				gap: .25rem;
			}
			.theme-wrap.centered {
				display: flex;
				justify-content: center;
				width: 100%;
				margin-top: 0.15em;
			}
		.footer-copyright {
			margin-top: 1em;
			font-size: 0.95em;
			color: rgb(var(--gray-dark));
		}
</style>
